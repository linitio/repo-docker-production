{
    "version": "2",
    "templates": [
        {
            "type": 3,
            "title": "Nginx Proxy Manager",
            "name": "Nginx Proxy Manager",
            "description": "Enables you to easily forward to your websites running at home or otherwise.",
            "note": "Website: <a href='https://nginxproxymanager.com/' target='_blank' rel='noopener'>nginxproxymanager.com</a>",
            "categories": [
                "proxy"
            ],
            "platform": "linux",
            "logo": "https://cdn.linit.io/logo/npm_logo.png",
            "repository": {
                "stackfile": "composes-files/nginx-proxy-manager.yml",
                "url": "https://github.com/linitio/repo-docker-production"
            },
            "env": [
                {
                    "name": "SERVICE",
                    "label": "Name of the service ",
                    "description": "No spaces or points",
                    "default": "nginx-proxy-manager"
                },
                {
                    "name": "DATA_LOCATION",
                    "label": "Data localization ",
                    "description": "Example: /apps/service",
                    "default": "/_data/apps"
                },
                {
                    "name": "URL",
                    "label": "Service URL",
                    "description": "Example: service.papamica.fr or service.com"
                },
                {
                    "name": "NETWORK",
                    "label": "Your Traefik network ",
                    "description": "Example: proxy",
                    "default": "proxy"
                }
            ]
        }
    ]
}